<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <!-- Button to navigate to Page1 -->
    <TextView
        android:id="@+id/pageHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Page 1"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        android:gravity="center"/>
    <Button
        android:id="@+id/page2Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Page 2" />

    <!-- Button to navigate to Page2 -->
    <Button
        android:id="@+id/page3Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Page 3"
        android:layout_marginTop="16dp" />

    <!-- Button to navigate to Page3 -->
    <Button
        android:id="@+id/page4Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Page 4"
        android:layout_marginTop="16dp" />

    <!-- Button to navigate to Page4 -->
    <Button
        android:id="@+id/page5Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Page 5"
        android:layout_marginTop="16dp" />
</LinearLayout>
